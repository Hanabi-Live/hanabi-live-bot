// These are Visual Studio Code settings that should apply to this particular
// repository
{
  // PEP-8 specifies a maximum line length of 79 characters
  "editor.rulers": [79],

  // Linux line endings are used in this project
  "files.eol": "\n",

  // Automatically run the "black" formatter when a Python file is saved
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
  },
}
